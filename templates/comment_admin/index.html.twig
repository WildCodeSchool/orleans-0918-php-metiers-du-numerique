{% extends 'layoutFront.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col-xs-12 text-center">
                <h1>Gestion des commentaires :</h1>
            </div>
        </div>

        <section class="sectionSpace">
            <div class="row justify-content-center align-items-center mb-5">
                <div class="col-xs-8 col-md-3 d-flex">
                    <div class="admission-color valid"></div>
                    <p>Commentaire validé</p>
                </div>
                <div class="col-xs-8 col-md-3 d-flex">
                    <div class="admission-color not-valid"></div>
                    <p class>Commentaire à valider</p>
                </div>
            </div>

            <table class="col-12 mx-auto table">
                <thead>
                <tr>
                    <th scope="col">Fiche associé</th>
                    <th scope="col">Date</th>
                    <th scope="col">Auteur</th>
                    <th scope="col">Voir</th>
                </tr>
                <tbody>
                {% for comment in comments %}
                    {% if comment.accepted == 0 %}
                        <tr class="not-valid">
                            <th>{{ comment.job }}</th>
                            <td>{{ comment.postDate|date('d/m/Y') }}</td>
                            <td>{{ comment.firstname ~ ' ' ~ comment.lastname }}</td>
                            <td>
                                <a class="col-xs-12 col-lg-12 col-md-1"
                                   href="{{ path('comment_admin_show', {'id': comment.id}) }}"><i class="far fa-eye eye-white"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr class="valid">
                            <th>{{ comment.job }}</th>
                            <td>{{ comment.postDate|date('d/m/Y') }}</td>
                            <td>{{ comment.firstname ~ ' ' ~ comment.lastname }}</td>
                            <td>
                                <a class="col-xs-12 col-lg-12 col-md-1"
                                   href="{{ path('comment_admin_show', {'id': comment.id}) }}"><i class="far fa-eye"></i></a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </section>
    </div>
{% endblock %}
